<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".fragment.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/cover_img_setting"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/placeholder_fb"
                android:scaleType="centerCrop"
                app:imageView_scale="0.85"
                app:imageView_duration="300"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img_setting"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="118dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_account"
                />

            <TextView
                android:id="@+id/username_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_img_setting"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorHint"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:text="@string/username" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your media social account here :"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorHint"
        android:textStyle="italic"
        android:textSize="14sp"
        android:layout_below="@id/cv1"
        android:layout_centerHorizontal="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:gravity="center"
        android:background="@drawable/shape_rectangle_purple"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="6dp">


        <ImageView
            android:id="@+id/set_facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_fb"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="35dp"
            android:layout_gravity="center" />


        <ImageView
            android:id="@+id/set_instagram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_ig"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="35dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/set_url"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_url"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>